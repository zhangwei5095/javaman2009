<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN" "validator_1_1_3.dtd" >
<form-validation>
<formset>
 <form name="validatorUserForm">
  <field property="name" depends = "required,mask">
     <arg key = "label.name"/>
        <var>
           <var-name>mask</var-name>
           <var-value>^[a-zA-Z]*$</var-value>
        </var>
  </field>
  <field property="id" depends = "required">
     <arg key = "label.id" position="0"/>        
  </field>
 </form>
</formset>

</form-validation>
